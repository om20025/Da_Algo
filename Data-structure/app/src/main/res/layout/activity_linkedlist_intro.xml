                android:layout_marginRight="10dp"
                android:textAlignment="gravity"
                app:layout_constraintTop_toBottomOf="@+id/link_text1"
                tools:ignore="MissingConstraints,UnknownIdInLayout"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
