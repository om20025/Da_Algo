                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:backgroundTint="#ffa500"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:title="Linked list"
                app:titleMarginStart="40dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/link_image1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/linkedlist"
                app:layout_constraintTop_toBottomOf="@+id/linkedlist_intro_toolbar"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/link_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginRight="10dp"
                android:textAlignment="gravity"
                app:layout_constraintTop_toBottomOf="@+id/link_image1"
                tools:ignore="MissingConstraints,UnknownIdInLayout"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
