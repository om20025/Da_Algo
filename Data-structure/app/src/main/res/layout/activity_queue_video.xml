<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".queue_video"
    android:background="#FFFFF0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Queue_video_Toolbar"
                android:backgroundTint="#ffa500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                tools:ignore="MissingConstraints"
                app:title="Queue Data Structure"
                app:titleMarginStart="40dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/Queue_video_Toolbar"
                tools:layout_editor_absoluteX="0dp"
                android:text="Introduction Of Queue"
                android:backgroundTint="#a020f0"
                android:id="@+id/btn_queue_video1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_queue_video1"
                tools:layout_editor_absoluteX="0dp"
                android:backgroundTint="#a020f0"
                android:text="Implementation Using Array"
                android:id="@+id/btn_queue_Video2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_queue_Video2"
                tools:layout_editor_absoluteX="0dp"
                android:backgroundTint="#a020f0"
                android:text="Implementation Using Linked List"
                android:id="@+id/btn_queue_Video3"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_queue_Video3"
                tools:layout_editor_absoluteX="0dp"
                android:backgroundTint="#a020f0"
                android:text="Priority Queue"
                android:id="@+id/btn_queue_Video4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_queue_Video4"
                tools:layout_editor_absoluteX="0dp"
                android:backgroundTint="#a020f0"
                android:text="Circular Queue"
                android:id="@+id/btn_queue_Video5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.drawerlayout.widget.DrawerLayout>