<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Array_video"
    android:background="#FFFFF0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/Array_video_Toolbar"
                android:backgroundTint="#ffa500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                tools:ignore="MissingConstraints"
                app:title="Array Data Structure"
                app:titleMarginStart="40dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/Array_video_Toolbar"
                tools:layout_editor_absoluteX="0dp"
                android:text="Introduction Of Array"
                android:backgroundTint="#a020f0"
                android:id="@+id/btn_array_video1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_array_video1"
                tools:layout_editor_absoluteX="0dp"
                android:text="Two Dimensional Array"
                android:backgroundTint="#a020f0"
                android:id="@+id/btn_array_video2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_array_video2"
                tools:layout_editor_absoluteX="0dp"
                android:text="Linear Search"
                android:backgroundTint="#a020f0"
                android:id="@+id/btn_array_video3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>